{% extends "layouts/default.njk" %}
{% set title = "Sorry there is a problem with the service" %}

{% block main_content %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <h1 class="govuk-heading-l">
                {{ title }}
            </h1>
            <p class="govuk-body">
                Try again later.
            </p>
            <p class="govuk-body">
                If the problem continues <a href="mailto:enquiries@companieshouse.gov.uk" class="govuk-link">email us.</a>
            </p>
        </div>
    </div>

{% endblock %}
